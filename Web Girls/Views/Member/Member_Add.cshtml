                        <label>Ngày Tham Gia</label>
                    </div>
                    <div class="form-group col-lg-8">
                        <input type="datetime-local" placeholder="01-01-1999" class="form-control">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group col-lg-4 text-uppercase text-left" style="padding: 5px 5px;">
                        <label>Vị Trí Trong Hội</label>
                    </div>
                    <div class="form-group col-lg-8">
                        <select class="form-control">
                            <option value="AL">Hội Viên </option>
                            <option value="WY">Học Viên</option>
                            <option value="WY">Hội Trưởng</option>
                        </select>
                    </div>
                </div>

